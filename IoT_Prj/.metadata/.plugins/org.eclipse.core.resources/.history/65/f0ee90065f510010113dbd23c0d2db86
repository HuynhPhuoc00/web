#ifndef SRC_DEVICE_H_
#define SRC_DEVICE_H_

#include <stdint.h>
#include <string>
#include "i2c_lcd2.h"
#include "74HC595.h"
#include "lcd.h"

enum Room_ID{
	em_LV_R = 2,
	em_KC_R = 3,
	em_B_R = 4
};

class Device{
private:
	uint8_t id;
	uint8_t id_74HC[5];
public:
	enum emDevice{
		em_Led1 = 0b10000000,
		em_Led2 = 0b01000000,
		em_Led3 = 0b00100000,
		em_Fan1 = 0b00010000,
		em_Fan2 = 0b00001000
	};
	Device(std::string name);
	~Device();
	void TurnOnLed(uint8_t data);
	void TurnOffLed(uint8_t data);
	void TurnOnFan(uint8_t data);
	void ShowDisplay(char *data, int row, int col);

};


#endif /* SRC_DEVICE_H_ */
